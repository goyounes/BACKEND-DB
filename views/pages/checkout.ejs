  <title>Checkout</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    h1 {
      text-align: center;
    }

    .checkout-container {
      max-width: 600px;
      margin: 2rem auto;
      padding: 2rem;
      border: 2px solid #ccc;
      border-radius: 10px;
      background-color: #f9f9f9;
    }

    .checkout-summary {
      margin-bottom: 2rem;
    }

    .checkout-summary p {
      margin: 0.5rem 0;
    }

    label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: bold;
    }

    input[type="text"],
    input[type="email"],
    input[type="number"] {
      width: 100%;
      padding: 0.5rem;
      margin-bottom: 1rem;
      border-radius: 5px;
      border: 1px solid #ccc;
    }

    button {
      display: block;
      width: 100%;
      padding: 0.75rem;
      font-size: 1rem;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
    }

    button:hover {
      background-color: #45a049;
    }
  </style>
</head>

