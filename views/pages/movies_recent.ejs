<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Recent Movies List</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      padding: 12px;
      border: 1px solid #ccc;
      text-align: left;
    }
    th {
      background-color: #f4f4f4;
    }
    .highlight {
      background-color: #e6ffe6 !important;
    }
    h1 {
      margin: 0; /* Remove margin for h1 */
      text-align: left;
    }
    a.button-link {
      display: inline-block;
      padding: 10px 30px;
      font-size: 18px;
      cursor: pointer;
      border: none;
      margin-top: 5px;
      border-radius: 5px;
      background-color: #4CAF50;
      color: white;
      text-decoration: none;
      transition: background-color 0.3s ease;
    }
    a.button-link:hover {
      background-color: #45a049;
    }
</style>
</head>
<body>
  <%- include('../partials/navbar') %>
  <div class="movies-header">
    <h1>Movies List</h1>
    <a class="button-link" href='/movies/create'>Add Movie</a>
  </div>
  <table>
    <thead>
      <tr>
        <th>Poster</th>
        <th>Title</th>
        <th>Description</th>
        <th>Age Rating</th>
        <th>Team Pick</th>
        <th>Score</th>
        <th>Length</th>
      </tr>
    </thead>
    <tbody id="movies-body">
      <% movies.forEach( movie => {%>
        <tr class=<%= movie.is_team_pick ?"highlight":""%>>
          <td>
            <% if (movie.poster_img) { %>
                <img 
                  src="data:<%= movie.poster_img_type  %>;base64,<%= movie.poster_img %>" 
                  alt="Poster for <%= movie.title %>" 
                  style="width: 80px; height: auto; border-radius: 5px;" 
                />
              <% } else { %>
                N/A
              <% } %>
          </td>
          <td><a href= <%= "movies/" + movie.movie_id%> > <%= movie.title%> </a></td>
          <td> <%= movie.description%></td>
          <td> <%= movie.age_rating%></td>
          <td> <%= movie.is_team_pick?"Yes":"No"%></td>
          <td> <%= movie.score%></td>
          <td> <%= movie.length%></td>
        </tr>
      <%})%>
    </tbody>
  </table>


</body>
</html>
