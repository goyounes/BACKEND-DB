<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Messages</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    h1 {
      text-align: center;
    }
    .message-card {
      border: 2px solid black;
      border-radius: 10px;
      padding: 1rem;
      margin-bottom: 1rem;
      background: #f9f9f9;
    }
    .message-card strong {
      margin-bottom: 0.3rem;
    }
    .unread {
      background-color: #deecff;
    }
  </style>
</head>

<body>


  <%- include('../partials/navbar') %>

  <main>
    <div class="container-half-center">
      <h1>Inbox</h1>
      <div id="messageList">
        <% if (messages.length === 0) { %>
          <p>No messages found.</p>
        <% } else { %>
          <% messages.forEach(function(msg) { %>
            <div class="message-card <%= msg.isRead ? '' : 'unread' %>">

              <div style="margin-bottom: 0.5rem;">
                <strong>From:</strong> <span> <%= msg.message_sender_name %></span>
                &lt;<a href="mailto:<%= msg.message_sender_email %>"><%= msg.message_sender_email %></a>&gt;
              </div>
              <div style="margin-bottom: 0.5rem;">
                <strong>Subject:</strong> <%= msg.message_subject %>
              </div>
              <div>
                <fieldset>  <legend>Message</legend>
                  <p style="margin-top: 0.3rem; line-height: 1.4;"> <%= msg.message_text %></p>
                </fieldset>
              </div>

            </div>
          <% }) %>
        <% } %>
      </div>
    </div>
  </main>

